{% extends 'base.html.twig' %}

{% block title %}Exercise index{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
<a href="{{ path('admin_exercise_new') }}" button type="button" class="btn btn-success position-absolute">Create New</a>
    <p class="d-flex justify-content-end">Exercise index</p>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercise in exercises %}
            <tr>
                <td>{{ exercise.id }}</td>
                <td>{{ exercise.title }}</td>
                <td><img src="{{ asset('uploads/exercise_img/'~ exercise.imgPath) }}" alt="Exercise Image Abloc" style="width:30px;"></td>
                <td>
                    <a href="{{ path('admin_exercise_show', {'id': exercise.id}) }}" class="btn btn-primary fas fa-search-plus"></a>
                    <a href="{{ path('admin_exercise_edit', {'id': exercise.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_exercise_delete', {'id': exercise.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
