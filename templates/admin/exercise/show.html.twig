{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
    <h1>Exercise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ exercise.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/exercise_img/'~ exercise.imgPath) }}" alt="Exercise Image Abloc" style="width:50px;"></td>
            </tr>   
        </tbody>
    </table>
    <table class="table">
        <tbody>
            <td><a href="{{ path('admin_exercise_edit', {'id': exercise.id}) }}" class="btn btn-success btn-block">Edit Exercise</a></td>
            <td>{{ include('admin/exercise/_delete_form.html.twig') }}</td>
        </tbody>
    </table>
{% endblock %}
