{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
        <p class="d-flex justify-content-end">Exercise details</p>
        <p class="d-flex justify-content-end"><font color="#fff">Created At : {{ exercise.createdAt|date("m/d/Y") }}</p>
    <table class="table table-striped table-dark">
        <div class="d-flex justify-content-start">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="objects-list" role="tablist">
                <li class="nav-item-tab">
                <a class="nav-link active" href="#hints" role="tab" aria-controls="hints" aria-selected="true">Hints</a>
                </li>
                <li class="nav-item-tab">
                <a class="nav-link"  href="#prerequisites" role="tab" aria-controls="prerequisites" aria-selected="false">Prerequisites</a>
                </li>
                <li class="nav-item-tab">
                <a class="nav-link" href="#programs" role="tab" aria-controls="programs" aria-selected="false">Programs</a>
                </li>
                </ul>
            </div>
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Score</th>
                <th>Time</th>
                <th>Image</th>
                <th>Mastery Level</th>
                <th>Actions</th>
            </tr>
        </thead>    
        <tbody>
            <tr>
                <td>{{ exercise.id }}</td>
                <td>{{ exercise.title }}</td>
                <td>{{ exercise.score }}</td>
                <td>{{ exercise.time }}</td>
                <td><img src="{{ asset('uploads/exercise_img/'~ exercise.imgPath) }}" alt="Exercise Image Abloc" style="width:30px;"></td>
                <td>{{ exercise.masteryLevel.title }}</td>
                <td>
                    <a href="{{ path('admin_exercise_edit', {'id': exercise.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_exercise_delete', {'id': exercise.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr><font color="#fff">Description</tr>
        </thead>
        <tbody>
                <td>{{ exercise.description }}</td>
        </tbody>
    </table>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr><font color="#fff">Tabs</tr>
        </thead>
        <tbody>
            <td>
                <div class="card" style="width: auto;">
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="hints" role="tabpanel">
                                {% for hint in exercise.hints %}
                                    <p class="card-text">{{ hint.text }}</p>
                                {% endfor %}
                            </div>
                            <div class="tab-pane" id="prerequisites" role="tabpanel" aria-labelledby="prerequisites-tab">  
                                {% for prerequisite in exercise.prerequisites %}
                                    <p class="card-text">{{ prerequisite.description }}</p>
                                {% endfor %}
                            </div>
                            <div class="tab-pane" id="programs" role="tabpanel" aria-labelledby="programs-tab">
                            {% for program in exercise.programs %}
                                <p class="card-text">{{ program.title }}</p>
                            {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tbody>
    </table>
</div>

<!-- @TODO include fichier js pr supprimer ici -->
<script>$('#objects-list a').on('click', function (e) {
  e.preventDefault()
  $(this).tab('show')
})
</script>
{% endblock %}
