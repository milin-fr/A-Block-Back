{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
    <h1>Exercise</h1>

<div class="wrapper">
  <div class="table">
    <div class="row header">
      <div class="cell">
        Id
      </div>
      <div class="cell">
        Title
      </div>
      <div class="cell">
        Image
      </div>
      <div class="cell">
        Actions
      </div>
    </div>
    <div class="row">
      <div class="cell" data-title="Id">
        {{ exercise.id }}
      </div>
      <div class="cell" data-title="Title">
        {{ exercise.title }}
      </div>
      <div class="cell" data-title="Image">
        <img src="{{ asset('uploads/exercise_img/'~ exercise.imgPath) }}" alt="exercise Image Abloc" style="width:50px;">
      </div>
      <div class="cell" data-title="Actions">
          <a href="{{ path('admin_exercise_edit', {'id': exercise.id}) }}" class="btn btn-success btn-block">Edit Exercise</a>
        {{ include('admin/exercise/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
<a href="{{ path('admin_exercise_index') }}" button type="button" class="btn btn-primary btn-block">Back to list</a>
{% endblock %}
