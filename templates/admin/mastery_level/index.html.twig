{% extends 'base.html.twig' %}

{% block title %}MasteryLevel index{% endblock %}

{% block body %}
<a href="{{ path('admin_exercise_new') }}" button type="button" class="btn btn-primary btn-block">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mastery_level in mastery_levels %}
            <tr>
                <td>{{ mastery_level.id }}</td>
                <td>{{ mastery_level.title }}</td>
                <td>
                    <a href="{{ path('admin_mastery_level_show', {'id': mastery_level.id}) }}">show</a>
                    <a href="{{ path('admin_mastery_level_edit', {'id': mastery_level.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
