<div class="wrapper-entity-form">
    <p class="d-flex justify-content-end">Mastery Level</p>
    <table class="table table-striped table-bordered table-light text-center">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ mastery_level.id }}</td>
