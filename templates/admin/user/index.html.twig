{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<a href="{{ path('admin_user_new') }}" button type="button" class="btn btn-primary btn-block">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td><img src="{{ asset('uploads/user_img/'~ user.imgPath) }}" alt="User Image Abloc" style="width:30px;"></td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">edit</a>
                    <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
