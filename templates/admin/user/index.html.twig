{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
<a href="{{ path('admin_user_new') }}" button type="button" class="btn btn-success position-absolute">Create New</a>
    <p class="d-flex justify-content-end">User index</p>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Image</th>
                <th>Actions</th>
                <th>Edit Password</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td><img src="{{ asset('uploads/user_img/'~ user.imgPath) }}" alt="User Image Abloc" style="width:30px;"></td>
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary fas fa-search-plus"></a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
                <td><a href="{{ path('admin_user_edit_password', {'id': user.id}) }}" class="btn btn-warning fas fa-key"></a></td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
