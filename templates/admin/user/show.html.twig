{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/user_img/'~ user.imgPath) }}" alt="User Image Abloc" style="width:50px;"></td>
            </tr>          
        </tbody>
    </table>
    <table class="table">
        <tbody>
            <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-success btn-block">Edit User</a></td>
            <td><a href="{{ path('admin_user_edit_password', {'id': user.id})  }}" button type="button" class="btn btn-warning btn-block">Edit Password</a></td>
            <td>{{ include('admin/user/_delete_form.html.twig') }}</td>
        </tbody>
    </table>
                <a href="{{ path('admin_user_index') }}" button type="button" class="btn btn-primary btn-block">Back to list</a>
{% endblock %}
