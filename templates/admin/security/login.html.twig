{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login-container d-flex justify-content-center">
	<div class="login-card">
		<div class="login-card-header flex-column">
			<h3>Sign In</h3>
		</div>
		<div class="login-card-body">
        	<form method="post">
				<div class="login-input-group form-group">
					<div class="login-input-group-prepend">
					<span class="login-input-group-text"><i class="fas fa-user"></i></span>
					</div>
					<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
				</div>
				<div class="login-input-group form-group">
					<div class="login-input-group-prepend">
					<span class="login-input-group-text"><i class="fas fa-key"></i></span>
					</div>
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
				</div>
				<div class="login-form-group">
					<input type="submit" value="Login" class="btn center login_btn">
				</div>
				<div class="hidden-content">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
			</form>
		</div>
		<div class="login-card-footer">
		<a href="{{ path('password_recovery') }}">Forgot your password?</a>
		</div>
	</div>
</div>
{% endblock %}
