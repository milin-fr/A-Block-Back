<form method="post" action="{{ path('admin_hint_delete', {'id': hint.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hint.id) }}">
    <button class="btn btn-danger fas fa-trash-alt"></button>
</form>
