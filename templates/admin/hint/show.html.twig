{% extends 'base.html.twig' %}

{% block title %}Hint{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
    <p class="d-flex justify-content-end">Hint</p>
    <table class="table table-striped table-bordered table-light text-center">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ hint.id }}</td>
                <td>{{ hint.text }}</td>
                <td>
                    <a href="{{ path('admin_hint_edit', {'id': hint.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_hint_delete', {'id': hint.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
