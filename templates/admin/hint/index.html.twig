{% extends 'base.html.twig' %}

{% block title %}Hint index{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
<a href="{{ path('admin_hint_new') }}" button type="button" class="btn btn-success position-absolute">Create New</a>
    <p class="d-flex justify-content-end">Hint index</p>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hint in hints %}
            <tr>
                <td>{{ hint.id }}</td>
                <td>{{ hint.text }}</td>
                <td>
                    <a href="{{ path('admin_hint_show', {'id': hint.id}) }}" class="btn btn-primary fas fa-search-plus"></a>
                    <a href="{{ path('admin_hint_edit', {'id': hint.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_hint_delete', {'id': hint.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
