{% extends 'base.html.twig' %}

{% block title %}Hint index{% endblock %}

{% block body %}
<a href="{{ path('admin_hint_new') }}" button type="button" class="btn btn-primary btn-block">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hint in hints %}
            <tr>
                <td>{{ hint.id }}</td>
                <td>{{ hint.text }}</td>
                <td>
                    <a href="{{ path('admin_hint_show', {'id': hint.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('admin_hint_edit', {'id': hint.id}) }}" class="btn btn-warning">edit</a>
                    <a href="{{ path('admin_hint_delete', {'id': hint.id}) }}" class="btn btn-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
