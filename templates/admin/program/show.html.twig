{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

<div class="wrapper">
  <div class="table">
    <div class="row header">
      <div class="cell">
        Id
      </div>
      <div class="cell">
        Title
      </div>
      <div class="cell">
        Image
      </div>
      <div class="cell">
        Actions
      </div>
    </div>
    <div class="row">
      <div class="cell" data-title="Id">
        {{ program.id }}
      </div>
      <div class="cell" data-title="Title">
        {{ program.title }}
      </div>
      <div class="cell" data-title="Image">
        <img src="{{ asset('uploads/program_img/'~ program.imgPath) }}" alt="Program Image Abloc" style="width:50px;">
      </div>
      <div class="cell" data-title="Actions">
          <a href="{{ path('admin_program_edit', {'id': program.id}) }}" class="btn btn-success btn-block">Edit Program</a>
        {{ include('admin/program/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
<a href="{{ path('admin_program_index') }}" button type="button" class="btn btn-primary btn-block">Back to list</a>
{% endblock %}
