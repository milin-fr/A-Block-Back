{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<a href="{{ path('admin_exercise_new') }}" button type="button" class="btn btn-primary btn-block">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>
                    <a href="{{ path('admin_program_show', {'id': program.id}) }}">show</a>
                    <a href="{{ path('admin_program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
