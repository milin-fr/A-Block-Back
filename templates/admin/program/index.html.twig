{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<a href="{{ path('admin_program_new') }}" button type="button" class="btn btn-primary btn-block">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td><img src="{{ asset('uploads/program_img/'~ program.imgPath) }}" alt="Program Image Abloc" style="width:30px;"></td>
                <td>
                    <a href="{{ path('admin_program_show', {'id': program.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('admin_program_edit', {'id': program.id}) }}" class="btn btn-warning">edit</a>
                    <a href="{{ path('admin_program_delete', {'id': program.id}) }}" class="btn btn-danger">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
