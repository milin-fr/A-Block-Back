{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<div class="wrapper-entity-form">
<a href="{{ path('admin_program_new') }}" button type="button" class="btn btn-success position-absolute">Create New</a>
    <p class="d-flex justify-content-end">Program index</p>
    <table class="table table-striped table-dark">
        <thead class="thead">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td><img src="{{ asset('uploads/program_img/'~ program.imgPath) }}" alt="Program Image Abloc" style="width:30px;"></td>
                <td>
                    <a href="{{ path('admin_program_show', {'id': program.id}) }}" class="btn btn-primary fas fa-search-plus"></a>
                    <a href="{{ path('admin_program_edit', {'id': program.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    <a href="{{ path('admin_program_delete', {'id': program.id}) }}" class="btn btn-danger fas fa-trash-alt"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
