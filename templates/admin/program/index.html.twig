{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<div class="info-container">
    <div class="info-body">
    <a href="{{ path('admin_program_new') }}" button type="button" class="btn btn-success position-absolute">Create New</a>
    <p class="route d-flex justify-content-end">Program index</p>
    <table class="table table-striped table-bordered table-light text-center">
        <thead class="info-thead">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td><img src="{{ asset('uploads/program_img/'~ program.imgPath) }}" alt="Program Image Abloc"></td>
                <td>
                    <a href="{{ path('admin_program_show', {'id': program.id}) }}" class="btn btn-primary fas fa-search-plus"></a>
                    <a href="{{ path('admin_program_edit', {'id': program.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    {{ include('admin/program/_delete_small_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="no-records">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
