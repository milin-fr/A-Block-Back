{% extends 'base.html.twig' %}

{% block title %}ExerciseComment{% endblock %}

{% block body %}
<div class="info-container">
    <div class="info-body">
    <p class="route d-flex justify-content-end">Exercise comment</p>
    <table class="table table-striped table-bordered table-light text-center">
        <thead class="info-thead">
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>User</th>
                <th>Exercise</th>  
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ exercise_comment.id }}</td>
                <td>{{ exercise_comment.text }}</td>
                <td>{{ exercise_comment.user.email }}</td>
                <td>{{ exercise_comment.exercise.title }}</td>
                <td>
                    <a href="{{ path('admin_exercise_comment_edit', {'id': exercise_comment.id}) }}" class="btn btn-warning fas fa-edit"></a>
                    {{ include('admin/exercise_comment/_delete_small_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
        <div class="back-list-button">
            <a href="{{ path('admin_exercise_comment_index') }}" button type="button" class="btn btn-primary btn-block">Back to list</a>
        </div>
</div>
{% endblock %}
